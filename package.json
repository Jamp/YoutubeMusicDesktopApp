{
  "name": "youtube-music-desktop",
  "productName": "YouTube Music",
  "version": "1.0.0",
  "description": "YouTube Music desktop app with system tray support",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "electron",
    "youtube-music",
    "desktop",
    "system-tray"
  ],
  "author": {
    "name": "Jaro Marval",
    "email": "jampgold@gmail.com"
  },
  "homepage": "https://github.com/jampgold/youtube-music-desktop",
  "repository": {
    "type": "git",
    "url": "https://github.com/jampgold/youtube-music-desktop.git"
  },
  "license": "MIT",
  "build": {
    "appId": "com.youtubemusic.desktop",
    "productName": "YouTube Music",
    "files": [
      "main.js",
      "mini-player.html",
      "assets/**/*"
    ],
    "mac": {
      "icon": "assets/icon.png",
      "category": "public.app-category.music",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "icon": "assets/icon.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "category": "Audio",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "maintainer": "Jaro Marval <jampgold@gmail.com>"
    },
    "publish": {
      "provider": "github",
      "releaseType": "release"
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  },
  "packageManager": "pnpm@10.18.3+sha512.bbd16e6d7286fd7e01f6b3c0b3c932cda2965c06a908328f74663f10a9aea51f1129eea615134bf992831b009eabe167ecb7008b597f40ff9bc75946aadfb08d"
}
