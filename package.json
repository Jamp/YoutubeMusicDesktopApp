{
  "name": "youtube-music-desktop",
  "productName": "YouTube Music",
  "version": "1.0.0",
  "description": "YouTube Music desktop app with system tray support",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "electron",
    "youtube-music",
    "desktop",
    "system-tray"
  ],
  "author": "",
  "license": "MIT",
  "build": {
    "appId": "com.youtubemusic.desktop",
    "productName": "YouTube Music",
    "mac": {
      "icon": "assets/icon.png",
      "category": "public.app-category.music"
    },
    "win": {
      "icon": "assets/icon.png"
    },
    "linux": {
      "icon": "assets/icon.png",
      "category": "Audio"
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  }
}
